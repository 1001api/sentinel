package pages

templ LoginPage() {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<meta charset="UTF-8"/>
			<link rel="stylesheet" href="/static/global.css"/>
			<title>Sign In to Sentinel</title>
			<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
			<link rel="preconnect" href="https://fonts.googleapis.com"/>
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
			<link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet"/>
		</head>
		<body class="min-h-screen">
			<main class="w-full min-h-screen flex items-center">
				<div class="w-7/12 min-h-screen bg-muted hidden lg:block">
					<div class="relative w-full h-screen">
						<!-- BACKDROP VIDEO -->
						<video
							data-testid="backdrop-video"
							autoplay
							loop
							muted
							class="w-full h-full object-cover filter brightness-75"
						>
							<source
								src="https://videos.pexels.com/video-files/5020446/5020446-hd_1066_1920_25fps.mp4"
								type="video/mp4"
							/>
							Your browser does not support the video tag.
						</video>
						<!-- BACKDROP COLOR -->
						<div
							class="absolute h-screen w-full bg-secondary/50 inset-0 flex items-center justify-center"
						></div>
					</div>
				</div>
				<div class="w-full lg:w-5/12 min-h-screen">
					<div
						class="flex bg-gradient-to-r from-secondary to-third min-h-screen items-center justify-center"
					>
						<!-- CARD -->
						<div
							class="mx-4 max-w-md p-6 bg-white shadow-xl border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
						>
							<div class="grid gap-1">
								<img src="/favicon-96x96.png" alt="" width="60"/>
								<h1 class="text-5xl font-bold">Sentinel.</h1>
								<p class="text-lg text-muted-foreground text-balance">
									Event-driven Data Pipeline
								</p>
							</div>
							<div class="grid gap-4">
								<button class="my-6 flex gap-2 items-center justify-center text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-semibold rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
									<svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 326667 333333" shape-rendering="geometricPrecision" text-rendering="geometricPrecision" image-rendering="optimizeQuality" fill-rule="evenodd" clip-rule="evenodd"><path d="M326667 170370c0-13704-1112-23704-3518-34074H166667v61851h91851c-1851 15371-11851 38519-34074 54074l-311 2071 49476 38329 3428 342c31481-29074 49630-71852 49630-122593m0 0z" fill="#4285f4"></path><path d="M166667 333333c44999 0 82776-14815 110370-40370l-52593-40742c-14074 9815-32963 16667-57777 16667-44074 0-81481-29073-94816-69258l-1954 166-51447 39815-673 1870c27407 54444 83704 91852 148890 91852z" fill="#34a853"></path><path d="M71851 199630c-3518-10370-5555-21482-5555-32963 0-11482 2036-22593 5370-32963l-93-2209-52091-40455-1704 811C6482 114444 1 139814 1 166666s6482 52221 17777 74814l54074-41851m0 0z" fill="#fbbc04"></path><path d="M166667 64444c31296 0 52406 13519 64444 24816l47037-45926C249260 16482 211666 1 166667 1 101481 1 45185 37408 17777 91852l53889 41853c13520-40185 50927-69260 95001-69260m0 0z" fill="#ea4335"></path></svg>
									Login with Google Account
								</button>
							</div>
							<div>
								<p class="text-xs">
									You'll be logged in with your Google account. If none exists, one will be created automatically. 
								</p>
								<p class="text-xs mt-4">
									By signing in, you agree to our <a href="/misc/tos" class="underline">Terms of Services</a>.
								</p>
							</div>
						</div>
					</div>
				</div>
			</main>
		</body>
	</html>
}
